<UserControl x:Class="NIR.Views.WorkCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NIR.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas x:Name="workspace">
        <Canvas.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.AppWorkspaceColorKey}}" />
        </Canvas.Background>

        <Border x:Name="border" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center"  Margin="0" VerticalAlignment="Center"  Padding="0" Canvas.Left="5" Canvas.Top="5">
            <Border.Effect>
                <DropShadowEffect Opacity="0.7" ShadowDepth="4" />
            </Border.Effect>

            <Canvas x:Name="DrawCanvas" Background="White" Margin="0" ClipToBounds="True">
            </Canvas>

        </Border>
    </Canvas>
</UserControl>
