<UserControl x:Class="NIR.Views.WorkSpace"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NIR.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel >
        <Expander DockPanel.Dock="Top"    Canvas.Left="19" Canvas.Top="39" IsExpanded="True">
            <WrapPanel>
                <ToggleButton x:Name="DoLine"   Width="58" Height="42" HorizontalAlignment="Left" Padding="10" Content="Линия" Checked="cmd_AddPolyline" />
                <ToggleButton x:Name="DoPointer"   Width="58" Height="42" HorizontalAlignment="Left" Padding="10" Content="Указатель" Checked="cmd_Pointer" />
            </WrapPanel>
        </Expander>
        <local:WorkCanvas/>
    </DockPanel>
</UserControl>
